html
  head
    title Log in
  body
    h1 Please log in
    form(action='/login', method='post')
      div
        label(for='username') Username
        input#username(type='text', name='username')
      div
        label(for='password') Password
        input#password(type='password', name='password')
      button Log in
      a(href='/register') Register
